%h1 Content Items
= link_to '+ New', new_content_item_path
%br
%br
%table.table.table-striped
  %thead
    %tr
      %th Identifier
      %th Container
      %th Description
      %th
      %th

  %tbody
    - @content_items.each do |content_item|
      %tr
        %td= link_to content_item.identifier, content_item
        %td= content_item.container_id
        %td= content_item.description
        %td= link_to 'Edit', edit_content_item_path(content_item)
        %td= link_to 'Delete', content_item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
