= form_for @content_item do |f|
  - if @content_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content_item.errors.count, "error")} prohibited this content_item from being saved:"
      %ul
        - @content_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :identifier
    = f.text_field :identifier
  .field
    = f.label :container_id
    = f.number_field :container_id
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
