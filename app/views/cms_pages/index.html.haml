%h1 Pages
= link_to('+ New', new_cms_page_path) if can?(:create, CmsPage)
%br
%br
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Path
      %th Locale
      %th
      %th

  %tbody
    - @cms_pages.each do |cms_page|
      %tr
        %td= link_to cms_page.name, cms_page
        %td= cms_page.path
        %td= cms_page.locale
        %td= link_to('Edit', edit_cms_page_path(cms_page)) if can?(:update, cms_page)
        %td= link_to('Delete', cms_page, :method => :delete, :data => { :confirm => 'Are you sure?' }) if can?(:destroy, cms_page)

%br
