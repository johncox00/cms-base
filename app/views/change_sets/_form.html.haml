= form_for @change_set do |f|
  - if @change_set.errors.any?
    #error_explanation
      %h2= "#{pluralize(@change_set.errors.count, "error")} prohibited this change_set from being saved:"
      %ul
        - @change_set.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .field
    = f.label :active_at
    = f.datetime_select :active_at, class: 'form-control'
  .field
    = f.label :inactive_at
    = f.datetime_select :inactive_at, class: 'form-control'
  .actions
    = f.submit 'Save'
